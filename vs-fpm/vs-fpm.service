[Unit]
Description=VenusScript FPM

After=syslog.target
After=network.target
Requires=nginx.service

[Service]
Type = forking
Restart=always
RestartSec=1
SuccessExitStatus=143
ExecStart = /usr/share/vs-fpm/vs-fpm start
ExecStop = /usr/share/vs-fpm/vs-fpm stop
ExecReload = /usr/share/vs-fpm/vs-fpm reload

[Install]
WantedBy=multi-user.target